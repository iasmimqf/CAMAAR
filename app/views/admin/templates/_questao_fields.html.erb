<div class="questao-item border border-gray-200 rounded-lg p-4 mb-4">
  <%= f.hidden_field :id %>
  
  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :enunciado, "Enunciado", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :enunciado, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :tipo, "Tipo", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :tipo, options_for_select([['Selecione...', ''], ['Escala', 'Escala'], ['Texto', 'Texto']], f.object.tipo), {}, { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
    </div>
  </div>
  
  <div class="mt-4 grid grid-cols-2 gap-4">
    <div>
      <%= f.label :opcoes, "Opções (para escalas, separadas por vírgula)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :opcoes, placeholder: "5,4,3,2,1", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="flex items-center">
      <%= f.hidden_field :obrigatoria, value: false %>
      <%= f.check_box :obrigatoria, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <%= f.label :obrigatoria, "Questão obrigatória", class: "ml-2 block text-sm text-gray-900" %>
    </div>
  </div>
  
  <div class="mt-2 flex justify-end">
    <% unless f.object.new_record? %>
      <%= f.check_box :_destroy, class: "hidden" %>
      <button type="button" class="remover-questao text-red-600 hover:text-red-800 text-sm">Remover</button>
    <% end %>
  </div>
</div>
